<view>
  <view class="portrait"><image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></image></view>
  <view class="nickname">玩家：{{userInfo.nickName}}</view>

  <view class="container" bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd"> 
    <!-- <text catchtap="click" class="{{color}}"> {{motto}} </text> -->
    <lable class = "item d{{item}}" wx:for="{{dataArray}}">
      {{ item ? item : ' ' }}
    </lable>
  </view>
  <modal title="提示" confirm-text="确定" no-cancel hidden="{{gameOverTips.status}}" bindconfirm="restart">
    {{gameOver.message}}
  </modal>
</view>
