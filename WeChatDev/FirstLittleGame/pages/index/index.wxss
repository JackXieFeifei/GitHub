/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  text-align: center;
}

.gameinfo {
  height: 140px;
  /**background: burlywood;*/
  margin: 10px 0px;
}

.userinfo {
  float: left;
  text-align: left;
  margin-top: 20px;
}

.nickname {
  color: green;
  text-align: left;
}

.scoreinfo {
  float: right;
  width: 180px;
  margin-top: 10px;
}

.my-score {
  background: #bbada0;
  float:left;
  width: 80px;
  height: 50px;
  font-size: 12px;
  border-radius: 3px;
}

.cur-score-font {
  color: #e2d4c7;
  margin-top: 3px;
}

.cur-score {
  color: white;
  font-size: 23px;
}

.high-score {
  background: #bbada0;
  float: right;
  width: 90px;
  height: 50px;
  font-size: 12px;
  border-radius: 5px;
}

.history-score-font {
  color: #e2d4c7;
  margin-top: 3px;
}

.history-score {
  color: white;
  font-size: 23px;
}

.button-restart {
  background: #8f7a65;
  float: right;
  width: 120px;
  margin-top: 20px;
  font-weight: 1000;
}

.game-area {
  background: #bbada0;
  width: 300px;
  height: 300px;
  border-radius: 10px;
}

.item {
  float: left;
  width: 65px;
  height: 65px;
  display: block;
  line-height: 75px;
  text-align: center;
  font-size: 22px;
  font-weight: 800;
  transition : transform 0.2s linear;
  /**border: 1px solid green;*/
  margin-left: 8px;
  margin-top: 8px;
  border-radius: 5px;
  -webkit-transition: -webkit-transform 0.2s linear;
}

